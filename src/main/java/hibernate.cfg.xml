    <property name="show_sql">false</property>

    <mapping class="org.kalinga.SpringMVC.hibernate.Minds" />
    <mapping class="org.kalinga.SpringMVC.hibernate.Lead" />
    <mapping class="org.kalinga.SpringMVC.hibernate.Track" />
   
